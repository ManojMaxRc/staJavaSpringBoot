package com.training.basic;

public class Sum {

	public static void main(String[] args) {
		
		int[] arr = {4, 9, 114, 219, 30, 46, 59, 1};
		
		System.out.println("Sum of all the numbers in array : " + sum(arr));
		System.out.println("Average of all the numbers in array : " + average(arr, sum(arr)));
	}
	
	public static int sum(int[] arr) {
		
		if(arr.length == 0) {
			return -1;
		}
		
		int sum = 0;
		
		arr[i] += arr[i] ;
		return sum;
	}
	
	public static int average(int[] arr, int sum) {
		
		int average = sum/(arr.length);
		return average;
	}
}
