package com.training.basic;

public class Reverse {

	public static void main(String[] args) {
		System.out.println(reverseNumber(49));

	}
	
	private static int reverseNumber(int num){
		
		int reverse = 0;
		int remainder ;
		
		if(num <= 9) {
			return num;
		}
		
		if(num == 10) {
			return num;
		}
		
		while(num != 0) {
			remainder = num % 10;
			reverse = (reverse * 10) + remainder;
			num = num/10;
		}
		return reverse;
	}

}
