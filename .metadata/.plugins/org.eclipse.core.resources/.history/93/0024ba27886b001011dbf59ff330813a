package com.training.basic;

import java.util.stream.IntStream;

public class Even {

	public static void main(String[] args) {
		
		//Using for loop
		int count = 0;
		int num = 0;
		
		while (count <= 20){
			if(num % 2 == 0) {
				System.out.println(num + " ");
			}		
		}
		System.out.println();
		
		//Using lambda expression
		IntStream.iterate(2, n -> n + 2)
		.limit(20)
		.forEach(System.out::println);
		}
	}