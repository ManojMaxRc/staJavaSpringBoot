package com.training.basic;

import java.util.stream.IntStream;

public class Even {

	public static void main(String[] args) {
		
		//Using for loop
		for (int i = 0; i <= 20; i++) {
			System.out.print(2 * i + " ");
			}
		
		System.out.println();
		
		//Using lambda expression
		IntStream.iterate(0, n -> n + 2)
		.limit(21)
		.forEach(System.out::println);
		}
	}