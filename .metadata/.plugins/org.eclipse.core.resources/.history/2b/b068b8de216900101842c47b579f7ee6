package com.shristi.java.basic;

public class SwitchDemo {

	public static void main(String[] args) {
		
		String weather = "rainy";
		
		switch (weather.toUpperCase()) {
		case "RAINY":
			System.out.println("Rainy Day");
			break;
        case "WINTER":
        	System.out.println("Cold Day");
        case "SUMMER":
        	System.out.println("Hot Day");
		default:
			break;
		}
		
		int a = 25;
		int b = 0;

		String operatorChoice = "/";
		
		switch (operatorChoice) {
		case "+":
			System.out.println("a + b = " + (a + b));
			break;
		case "-":
			System.out.println("a - b = " + (a - b));
			break;
		case "*":
			System.out.println("a * b = " + (a * b));
			break;
		case "/":
			if(b < 1) {
				System.out.println("b cannot be less than one!");
			}else {
				System.out.println("a / b = " + (a / b));
			}
			break;
		default:
            System.out.println("Incorrect operator choice!");
            break;
		}
	}
}
