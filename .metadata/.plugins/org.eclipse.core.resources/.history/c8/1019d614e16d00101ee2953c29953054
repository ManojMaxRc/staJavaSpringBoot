package com.basics.quest3;

import java.util.Scanner;

public class StudentMain {

	public static void main(String[] args) {
		
		Scanner input = new Scanner(System.in);
		
		System.out.println("Enter the student name and department : " );		
		Student student1 = new Student(input.next(), input.next());
		student1.printDetails();
		
		int[] marks = new int[5];
		System.out.println("Enter the marks : ");		
		for (int i = 0; i < marks.length; i++) {
			marks[i] = input.nextInt();
		}
		student1.getGrades(marks);
		
		Student student2 = new Student(input.next(), input.next());
		student2.printDetails();
		
		int[] marks1 = new int[5];
		System.out.println("Enter the marks : ");		
		for (int i = 0; i < marks1.length; i++) {
			marks1[i] = input.nextInt();
		}
		student1.getGrades(marks1);
	}

}
