package com.shristi.java;

public class IncDecOperator {

	public static void main(String[] args) {

		int a = 10;
		int b = 20;
		int c = 30;
		
		int x = ++a + b++ + ++c;
		System.out.println(a + " " + b + " " + c + " " + x);  // 11  20(21)  31  62
		
		int y = --x + b-- + 10;
		System.out.println(x + " " + b + " " + y);  //61  21(20)  92
		
		int z = y++ * 2;
		System.out.println(y + " " + z);  //92(93)  184

	}

}
